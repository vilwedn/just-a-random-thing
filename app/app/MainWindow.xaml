<Window x:Class="ddos.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ddos"
        mc:Ignorable="d"
        Title="lol" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="37*"/>
            <ColumnDefinition Width="64*"/>
            <ColumnDefinition Width="299*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lubel" Content="this is epic" HorizontalAlignment="Left" Height="36" Margin="40,38,0,0" VerticalAlignment="Top" Width="720" Background="#FF4DEC03" Foreground="Red" FontSize="20" Grid.ColumnSpan="3"/>
        <Button x:Name="yes" Content="yes" HorizontalAlignment="Left" Height="56" Margin="33,161,0,0" VerticalAlignment="Top" Width="163" FontSize="20" Background="#FF00A22C" Foreground="#FF55FFC1" BorderBrush="#FFFF0E0E" Grid.Column="1" Grid.ColumnSpan="2" Click="yes_Click"/>
        <Button x:Name="no" Content="no" HorizontalAlignment="Left" Height="56" Margin="198,161,0,0" VerticalAlignment="Top" Width="159" FontSize="20" Background="#FFD60606" Foreground="#FFFF0101" Grid.Column="2" Click="no_Click"/>

    </Grid>
</Window>
